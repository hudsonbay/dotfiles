#!/bin/bash

# Obtener el idioma actual
CURR_LANG="$(setxkbmap -print | grep xkb_symbols | awk '{print $4}' | awk -F"+" '{print $2}')"

# Definir los idiomas
US="us"
RU="ru"

# Cambiar el idioma a ruso si no estÃ¡ ya en ruso
if [ "$CURR_LANG" != "$RU" ]; then
    setxkbmap $RU
    echo "ðŸ‡·ðŸ‡º"  # Bandera de Rusia
else
    setxkbmap $US
    echo "ðŸ‡¬ðŸ‡§"  # Bandera del Reino Unido
fi
